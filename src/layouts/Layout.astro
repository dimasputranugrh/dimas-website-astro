---
export interface Props {
	title?: string;
	description?: string;
}

const { title = 'Portfolio', description = 'Portfolio pribadi.' } = Astro.props;

import '../styles/global.css';
---

<!doctype html>
<html lang="id">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<title>{title}</title>
	</head>
	<body
		class="overflow-x-hidden bg-white text-zinc-950 antialiased selection:bg-zinc-950/15 selection:text-zinc-950 dark:bg-zinc-950 dark:text-white dark:selection:bg-white/15 dark:selection:text-white"
	>
		<slot />
	</body>
</html>
